<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo de la barra -->
    <item android:id="@android:id/background" android:drawable="@android:color/darker_gray" />  <!-- Color de fondo -->
    <!-- Progreso secundario -->
    <item android:id="@android:id/secondaryProgress" android:drawable="@android:color/darker_gray" />  <!-- Progreso visible -->
    <!-- Progreso principal (el color que deseas, en este caso rojo) -->
    <item android:id="@android:id/progress" android:drawable="@color/red" />  <!-- Rojo para el progreso -->
</layer-list>
